// Post template
include('post.bit');

// If post allow comments
if(Post::allow_comments())
{
	if( $Comment->disqus_enabled() )
	{
		include('disqus_comments.bit');
	}
	elseif( $Comment->facebook_enabled() )
	{
		include('facebook_comments.bit');
	}
	else
	{
		include('nibbleblog_comments.bit');
	}
}

